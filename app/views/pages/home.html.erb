<header>
  <h1>Homepage</h1>
  <% if current_user %>
    <div>
      <%= current_user.name %>
      <%= image_tag(current_user.image) %>
    </div>
  <% end %>
</header>

<main>
  
  <section>
    <p class='copy'>
      Have your content reach a bigger audience. Hashtags can extend the reach of
      your content by grouping it with sumular content sharing the same hashtags.
      Knowing how popular a hashtags is con maximize conversion by 50%.
    </p>
  </section>

  <section id='hashtag-search'>
    
    <div>
      <input id='search'>
      <br>
      <button class='btn-2'>Submit</button>
    </div>
    
  </section>
  
  <div id='realtime'></div>

  <div class='run'>
      <table id='main-results'>
        <thead>
  		      <tr>
  		         <th>Tags</th>
  		      	 <th>Date</th>
  		         <th>Retweets</th>
  		         <th>Tweets</th>
  		         <th>Exposure</th>
  		      </tr>
  		   </thead>
      </table>
   </div>
</main>
